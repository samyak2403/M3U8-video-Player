<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Existing controls like play/pause, seek bar, etc. -->

    <!-- Rotate Button -->
    <ImageButton
        android:id="@+id/rotate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rotate"
        android:contentDescription="@string/rotate" />

    <!-- Fullscreen Button -->
    <ImageButton
        android:id="@+id/fullscreen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fullscreen_button_selector"
        android:contentDescription="@string/fullscreen_btn" />

    <!-- Speed Control Button -->
<!--    <ImageButton-->
<!--        android:id="@+id/speed_button"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/ic_speed"-->
<!--        android:contentDescription="@string/speed" />-->

    <!-- Network Speed TextView -->
    <TextView
        android:id="@+id/network_speed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed: -- Mbps"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@android:color/white" />

</LinearLayout>
